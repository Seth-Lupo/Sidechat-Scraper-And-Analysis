# Sidechat API Configuration
# Copy this file to .env and fill in your values

# Required: Your Sidechat authorization token (Bearer token from the API request)
SIDECHAT_AUTH_TOKEN=your_auth_token_here

# Required: Group ID to scrape posts from (from the API request)
SIDECHAT_GROUP_ID=your_group_id_here

# Optional: Directory to save JSON files (default: data)
OUTPUT_DIR=data

# Optional: Type of posts to fetch (default: hot)
# Options: hot, new, trending, etc.
POST_TYPE=hot

# Optional: Maximum number of batches to fetch (default: unlimited)
# Set this to limit the scraping for testing
MAX_BATCHES=10

# Optional: Starting cursor to resume from a specific point
# Leave empty to start from the beginning
# Example: persisted~73a3ac81-7139-4ad2-9eec-144e0143d134
INITIAL_CURSOR=

# Optional: Save full JSON batch files (default: true)
# Set to false to skip saving JSON files
SAVE_JSON=true

# Optional: Save cleaned text format (default: true)
# Set to false to skip saving the condensed text file
SAVE_CLEANED=true

# Optional: Interval between requests in milliseconds (default: 1000)
# Set to 0 for no delay, 2000 for 2 seconds, etc.
REQUEST_INTERVAL=1000